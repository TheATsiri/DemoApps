<Window x:Class="DIWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIWpfDemo"
        mc:Ignorable="d"
        FontSize="24"
        Title="MainWindow" Height="300" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock x:Name="txtGetDataAccess"/>
            <Button x:Name="GetDataBtn" Content="Get Data" Padding="20 10" Click="GetDataBtn_Click"/>
            <Button x:Name="OpenChildFormBtn" Content="Open Child Form" Padding="20 10" Click="OpenChildFormBtn_Click"/>
        </StackPanel>

    </Grid>
</Window>
